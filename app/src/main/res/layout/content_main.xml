<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.cosain.gemmary.MainActivity"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="#c61b48">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_marginTop="10dp"
        android:layout_weight="0.30">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="  Gemmary"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal|left"
            android:layout_marginTop="40dp"
            android:textStyle="italic"
            android:textColor="#ffffff"
            android:textSize="30dp"
            android:typeface="serif"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="172dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="  | STOCKS"
            android:id="@+id/textView3"
            android:layout_gravity="right"
            android:textColor="#ffffff"
            android:textSize="28dp"
            android:textStyle="bold"
            android:layout_marginTop="-38.7dp" />

    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:weightSum="1">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_username"
            android:layout_width="341dp"
            android:layout_height="wrap_content"
            android:background="#7b0930"
            android:layout_marginLeft="8dp"
            android:textColorHint="#ffffff"
            >

            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:background="@null"
                android:layout_height="50dp"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:layout_marginLeft="10dp"
                android:hint="@string/username" />
        </android.support.design.widget.TextInputLayout>



        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_pass"
            android:layout_width="341dp"
            android:layout_height="wrap_content"
            android:background="#7b0930"
            android:layout_marginLeft="8dp"
            android:textColorHint="#ffffff"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/editText2"
                android:layout_width="match_parent"
                android:background="@null"
                android:layout_height="50dp"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:layout_marginLeft="10dp"
                android:inputType="textPassword"
                android:hint="@string/pass" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_name"
            android:layout_width="341dp"
            android:layout_height="wrap_content"
            android:background="#7b0930"
            android:textColorHint="#ffffff"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/editText3"
                android:layout_width="match_parent"
                android:background="@null"
                android:layout_height="50dp"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:layout_marginLeft="10dp"
                android:inputType="numberPassword"
                android:hint="@string/spin" />
        </android.support.design.widget.TextInputLayout>



    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:weightSum="1"
        android:layout_weight="0.26">


        <Button
    android:layout_width="363dp"
    android:layout_height="wrap_content"
    android:text="@string/login"
    android:id="@+id/login"
    android:layout_marginTop="60dp"
    android:layout_gravity="center_horizontal"
    android:textColor="#7b0930"
    android:typeface="sans"
    android:onClick="login"
    android:textStyle="bold"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
            android:layout_weight="0.36" />
</LinearLayout>

</LinearLayout>


